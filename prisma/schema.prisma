generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ROLES {
  IMPORTER
  EXPORTER
  SUPER_ADMIN
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String
  role     ROLES
}

model Country {
  value    String  @unique
  title    String
  search   String  @db.Text
  alpha2   String
  disabled Boolean @default(false)
  friend   Boolean @default(false)
}

model Tnved {
  value    String  @unique
  title    String
  disabled Boolean @default(false)
  search   String  @db.Text
}
